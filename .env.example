# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration
# For Supabase, use the connection pooler URL with these parameters:
# ?pgbouncer=true&connection_limit=1&pool_timeout=10
# Example: postgresql://user:pass@host:6543/postgres?pgbouncer=true&connection_limit=1&pool_timeout=10
DATABASE_URL=your_database_url_with_pooler
DIRECT_URL=your_direct_database_url

# Admin Configuration (KEEP SECRET - DO NOT COMMIT)
# Get this from Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Admin Access Password (KEEP SECRET - DO NOT COMMIT)
# Set a strong password for admin panel access at /backstage
# Generate a strong password: openssl rand -base64 32
# Access admin panel: https://yourdomain.com/backstage
ADMIN_ACCESS_PASSWORD=your_strong_admin_password_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
